{
  "name": "@app-x/backend",
  "version": "0.0.1",
  "description": "backend",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "run-p nm ts",
    "start": "node --env-file=../../.env.prod ../../dist/server/main.js",
    "build:dev": "run-s clean ts:dev static:dev",
    "build:prod": "run-s clean ts:prod babel:prod static:prod",
    "look": "nodemon --env-file=../../.env.dev ../../build/server/main.js",
    "ts": "tsc --watch",
    "nm": "nodemon --watch ../../build/server --watch ../../.env.dev --env-file=../../.env.dev ../../build/server/main.js",
    "clean": "rimraf ../../build/server",
    "static:dev": "cp -R ./static ../../build/server/static",
    "static:prod": "cp -R ./static ../../dist/server/static",
    "ts:dev": "tsc --sourceMap --declaration --declarationMap",
    "ts:prod": "tsc",
    "babel:prod": "babel -d ../../dist/server ../../build/server --delete-dir-on-start --copy-files",
    "lint:js": "eslint ./src",
    "lint-staged": "lint-staged",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": [
      "../../packages/eslint-config/node.json"
    ]
  },
  "babel": {
    "extends": "../../packages/babel-config/node.json"
  },
  "dependencies": {
    "@yourock88/bind-self": "^0.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "libphonenumber-js": "^1.12.27",
    "socket.io": "^4.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "jest": "^30.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.0"
  }
}
