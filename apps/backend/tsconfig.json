{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "../../build/server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noEmit": false,
    "allowJs": false,
    "sourceMap": false,
    "declarationMap": false,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "frontend/**/*"]
}
