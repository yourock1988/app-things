{
  "compilerOptions": {
    "typeRoots": ["../../node_modules/@types", "../../node_modules", "./types"],
    "types": ["vitest/globals", "node"],
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "../../build/server",
    "rootDir": "./",
    "checkJs": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noEmit": false,
    "sourceMap": true,
    "declarationMap": false,
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": true
  },
  "include": ["spec", "src"],
  "exclude": ["node_modules", "build", "dist", "frontend/**/*"]
}
